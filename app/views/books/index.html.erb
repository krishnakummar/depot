<h1>Listing books</h1>

<table class="table table-bordered">
  <tr>
    <th>Cover</th>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th colspan='3'>Actions</th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= image_tag(book.picture, {:class => "img-circle", :height => 140, :width => 140}) if book.picture? %>
      <div class="well">
        <%= button_to "Add To Cart", line_items_path(:id => book.id) %>
        
      </div>
    </td>
    <td><%= book.title %></td>
    <td><%= book.description %></td>
    <td><%= book.price %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Book', new_book_path %>
